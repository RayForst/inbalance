/* bg images */
.bg-image
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  color:#fff

/* Elements */
.menu-line
  color $c_secondary
  text-indent -9999px
  height 24px
  width 1px
  background rgba($c_secondary,0.2)
  margin 0
  padding 0 !important


.offset-heading
  position relative
  text-align left
  margin-bottom 20px

  &:before
    content ''
    position absolute
    top 50%
    left 0 
    height 1px
    background rgba(#324148,0.2)
    width 100%

  &__text
    display inline-flex
    color #8395a7
    padding-right: 25px
    font-size: 11px;
    font-weight: normal;
    line-height: normal;
    letter-spacing: 0.3em;
    background: #fff;
    text-transform: uppercase
    position: relative;