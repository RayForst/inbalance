.ui-button
  font-size 12px
  text-transform uppercase
  padding 12px 25px
  border 2px solid $c_primary
  display inline-flex
  color: $c_primary
  text-decoration none
  justify-content: center
  cursor pointer
  transition all .3s ease
  letter-spacing 0.1em
  text-align: center;
  background: transparent;

  &:hover
    background $c_primary
    color: #fff

  &--white
    color #fff
    border-color #fff

    &:hover
      background #fff
      color: $c_primary

  &--full-green
    background-color $c_primary
    color #fff

    &:hover
      background #fff
      color: $c_primary

  &--big
    font-size 14px
    padding 17px 35px
  
.ui-form
  margin-top: 30px;
  
  @media $media_md {
    margin-top: 30px;
  }
  
  input, textarea 
    width 100%
    background-color: rgba(16, 51, 36, 0.11)
    padding 19px 30px
    font-size 18px
    box-sizing border-box
    border none
    letter-spacing: 0.8px
    margin-bottom: 30px;

    @media $media_lg {
      margin-bottom: 0;
    }
  
  textarea
    height: 198px;
    resize: none;

  .form-group
    margin-bottom: 16px

.ui-link
  text-decoration none
  
.ui-tag
  color:#fff
  background: $c_primary
  display inline-flex
  padding: 2px 5px
  font-size: 18px
  font-family: 'Lora', sans-serif
  padding: 11px 23px

  &--white
    background-color: #eceef1;
    color: #103324;
    font-size 11px;
    letter-spacing: 0.5em;
    text-transform: uppercase

.tabs-wrap
  @media $media_sm
    padding-bottom: 30px
  .tabs-component-tabs
    padding 0
    margin 0
    display flex
    list-style-type none
    justify-content space-between
    flex-direction: column
    align-items: flex-start;

    @media $media_sm
      flex-direction: row
      margin-bottom: 20px
  
    li
      font-family: 'Lora', sans-serif;
      font-size: 12px;
      letter-spacing: 0.09em;
      color: #000000;
      margin-bottom: 15px
      padding: 10px 0
      position: relative
      transition: opacity .3s ease
      &:hover
        opacity 0.6

      &.is-active
        &:before
          content: ''
          width 100%;
          position: absolute
          bottom: 0;
          height 1px
          background: #103324;
        a
          font-weight bold
      a
        color inherit
        text-decoration none
        text-transform: uppercase


